{
  "name": "firebase-socketio-chat-server",
  "version": "1.0.0",
  "description": "Servidor de chat seguro com Socket.IO e autenticação Firebase",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "security-audit": "npm audit --audit-level moderate",
    "env:check": "node -e \"console.log('Environment check:', !!process.env.FIREBASE_PROJECT_ID ? '✅ OK' : '❌ Missing Firebase config')\"",
    "build": "echo 'No build needed for Node.js'",
    "clean": "rm -rf node_modules package-lock.json",
    "docker:build": "docker build -t chat-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env chat-server"
  },
  "keywords": [
    "socket.io",
    "firebase",
    "chat",
    "websocket",
    "realtime",
    "secure",
    "authentication"
  ],
  "author": "Seu Nome <seu.email@exemplo.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/firebase-socketio-chat.git"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.6",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "firebase-admin": "^11.11.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.2",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "volta": {
    "node": "18.17.0",
    "npm": "9.6.7"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:security/recommended"
    ],
    "plugins": [
      "security"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "security/detect-object-injection": "off"
    }
  }
}
