# =================
# CONFIGURAÇÃO DO FIREBASE
# =================
# Obtenha essas informações no Firebase Console:
# 1. Vá para Configurações do Projeto → Contas de serviço
# 2. Clique em "Gerar nova chave privada"
# 3. Baixe o arquivo JSON e extraia as informações

FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# =================
# CONFIGURAÇÃO DO SERVIDOR
# =================
# Porta onde o servidor irá rodar
PORT=3000

# Ambiente de execução (development, production, test)
NODE_ENV=development

# =================
# CONFIGURAÇÃO DE CORS
# =================
# URLs permitidas para acesso (separadas por vírgula em produção)
# Em desenvolvimento: http://localhost:3000,http://127.0.0.1:3000
# Em produção: https://seudominio.com,https://www.seudominio.com
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# =================
# RATE LIMITING
# =================
# Janela de tempo para rate limiting (em milissegundos)
RATE_LIMIT_WINDOW_MS=900000

# Número máximo de requests por janela de tempo
RATE_LIMIT_MAX_REQUESTS=100

# =================
# CONFIGURAÇÃO DO BANCO DE DADOS (Opcional)
# =================
# Se você quiser adicionar persistência de dados
DATABASE_URL=postgresql://user:password@localhost:5432/chatdb
REDIS_URL=redis://localhost:6379

# =================
# SEGURANÇA E AUTENTICAÇÃO
# =================
# Chave secreta para JWT (se implementar autenticação adicional)
JWT_SECRET=your-super-secret-jwt-key-here-use-something-complex-and-random

# Tempo de expiração do JWT
JWT_EXPIRES_IN=24h

# =================
# CONFIGURAÇÕES DE EMAIL (Opcional)
# =================
# Para notificações por email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# =================
# CONFIGURAÇÕES DE CLOUD STORAGE (Opcional)
# =================
# Para upload de arquivos/imagens
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1

# =================
# CONFIGURAÇÕES DE LOGGING
# =================
# Nível de log (error, warn, info, debug)
LOG_LEVEL=info

# Arquivo de log (opcional)
LOG_FILE=logs/app.log

# =================
# CONFIGURAÇÕES DE MONITORAMENTO (Opcional)
# =================
# Para integração com serviços de monitoramento
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# =================
# CONFIGURAÇÕES DE CACHE (Opcional)
# =================
# TTL do cache em segundos
CACHE_TTL=300

# Tamanho máximo do cache
CACHE_MAX_SIZE=1000

# =================
# CONFIGURAÇÕES DE WEBSOCKET
# =================
# Timeout de conexão (milissegundos)
SOCKET_TIMEOUT=20000

# Intervalo de ping (milissegundos)
SOCKET_PING_INTERVAL=25000

# Timeout de ping (milissegundos)
SOCKET_PING_TIMEOUT=60000

# =================
# CONFIGURAÇÕES DE CHAT
# =================
# Tamanho máximo da mensagem
MAX_MESSAGE_LENGTH=500

# Máximo de mensagens por usuário por minuto
MAX_MESSAGES_PER_MINUTE=10

# Máximo de usuários simultâneos
MAX_CONCURRENT_USERS=1000

# =================
# CONFIGURAÇÕES DE MODERAÇÃO (Opcional)
# =================
# Habilitar filtro de profanidade
ENABLE_PROFANITY_FILTER=true

# Habilitar detecção de spam
ENABLE_SPAM_DETECTION=true

# Lista de palavras banidas (separadas por vírgula)
BANNED_WORDS=spam,phishing,malware

# =================
# CONFIGURAÇÕES DE BACKUP (Opcional)
# =================
# Para backup automático de dados
BACKUP_ENABLED=false
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30

# =================
# WEBHOOKS (Opcional)
# =================
# Para integração com outros serviços
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook

# =================
# ANALYTICS (Opcional)
# =================
# Para análise de uso
GOOGLE_ANALYTICS_ID=GA-XXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# =================
# FEATURE FLAGS (Opcional)
# =================
# Para controlar recursos
ENABLE_FILE_UPLOAD=false
ENABLE_VOICE_MESSAGES=false
ENABLE_VIDEO_CHAT=false
ENABLE_PRIVATE_MESSAGES=false
ENABLE_ROOMS=false

# =================
# LIMITES DE RECURSOS
# =================
# Tamanho máximo de upload (bytes)
MAX_FILE_SIZE=10485760

# Tipos de arquivo permitidos
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,txt

# Duração máxima de mensagem de voz (segundos)
MAX_VOICE_DURATION=60